<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
package="hkn.khf.khf">

<!-- To auto-complete the email text field in the login form with the user's emails -->
<uses-permission android:name="android.permission.GET_ACCOUNTS" />
<uses-permission android:name="android.permission.READ_PROFILE" />
<uses-permission android:name="android.permission.READ_CONTACTS" />
<uses-permission android:name="android.permission.INTERNET" />
<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
<uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

<application
    android:allowBackup="true"
    android:icon="@drawable/fest"
    android:label="Kan Film Festivali"
    android:roundIcon="@drawable/fest"
    android:supportsRtl="true"
    android:theme="@style/AppTheme">
    <activity
        android:name="hkn.khf.khf.FlashActivity"
        android:label="Kan Film Festivali">
        <intent-filter>
            <action android:name="android.intent.action.MAIN" />

            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>
    </activity>
    <activity
        android:name="hkn.khf.khf.MainActivity"
        android:label="Kan Film Festivali"
        android:theme="@style/AppTheme.NoActionBar" />
    <activity android:name="hkn.khf.khf.MainpageActivity" />
    <activity
        android:name="hkn.khf.khf.AboutActivity"
        android:label="AMACIMIZ"
        android:parentActivityName="hkn.khf.khf.MainActivity" />
    <activity
        android:name="hkn.khf.khf.AccountActivity"
        android:label="HESABIM"
        android:parentActivityName="hkn.khf.khf.MainActivity" />
    <activity
        android:name="hkn.khf.khf.SendActivity"
        android:label="Kan Film Festivali"
        android:parentActivityName="hkn.khf.khf.MainActivity" />
    <activity
        android:name="hkn.khf.khf.LoginActivity"
        android:label="Kan Film Festivali" />
    <activity
        android:name="hkn.khf.khf.KanbirActivity"
        android:label="Kan Film Festivali"
        android:parentActivityName="hkn.khf.khf.MainActivity" />
    <activity
        android:name="hkn.khf.khf.KanikiActivity"
        android:label="Kan Film Festivali"
        android:parentActivityName="hkn.khf.khf.MainActivity" />
    <activity
        android:name="hkn.khf.khf.festActivity"
        android:label="Kan Film Festivali"
        android:parentActivityName="hkn.khf.khf.MainActivity" />
    <activity
        android:name="hkn.khf.khf.sponsorActivity"
        android:label="Kan Film Festivali"
        android:parentActivityName="hkn.khf.khf.MainActivity" />
    <activity android:name="hkn.khf.khf.KanucActivity"

        android:label="Kan Film Festivali"
        android:parentActivityName="hkn.khf.khf.MainActivity" />

</application>

</manifest>